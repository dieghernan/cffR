citHeader("To cite cffr in publications use:")

year = format(Sys.time(), "%Y")
vers = paste('R package version', meta$Version)

citEntry(
  entry = 'manual',
  title = paste('cffr:', meta$Title),
  author = Filter(function(p) 'aut' %in% p$role, as.person(meta$Author)),
  year = year,
  note = vers,
  url = meta$URL,
  textVersion = paste('Hernang√≥mez, D. (', year, '). cffr: ', meta$Title, '. ', vers, '.', sep = '')
)

